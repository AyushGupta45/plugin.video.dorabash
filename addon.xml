<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addon id="plugin.video.dorabash" name="Dora Bash" version="1.0.0" provider-name="DoraBash">
    <requires>
        <import addon="xbmc.python" version="3.0.0"/>
        <import addon="script.module.requests" version="2.22.0"/>
        <import addon="script.module.beautifulsoup4" version="4.9.3"/>
    </requires>
    <extension point="xbmc.python.pluginsource" library="default.py">
        <provides>video</provides>
    </extension>
    <extension point="xbmc.addon.metadata">
        <platform>all</platform>
        <summary lang="en">Watch Doraemon Movies and Episodes</summary>
        <description lang="en">Stream Doraemon movies from DoraBash.com. Personal use wrapper for TV-friendly viewing. Watch your favorite Doraemon content in multiple quality options (480p, 720p, 1080p).</description>
        <license>Personal Use Only - See LICENSE.txt</license>
        <language></language>
        <forum></forum>
        <source></source>
        <website>https://dorabash.com</website>
        <email></email>
        <assets>
            <icon>icon.png</icon>
            <fanart>fanart.jpg</fanart>
        </assets>
        <news>Initial release - Stream Doraemon movies and episodes</news>
    </extension>
</addon>
